<project name="PublishRequest" basedir="." default="use">

	<property name="src.dir" value="src/main/java"/>
	<property name="target.dir" value="classes"/>
	
	
    <target name="clean" description="Delete all generated files">
    	 <delete dir="${target.dir}" failonerror="false"/>
    	 <delete file="${ant.project.name}.jar"/>
    </target>

    <target name="compile" description="Compiles the Task">
    	<mkdir dir="${target.dir}"/>
    	<javac srcdir="${src.dir}" destdir="${target.dir}"/>
    </target>

	<target name="jar" description="JARs the Task" depends="compile">
		<jar destfile="${ant.project.name}.jar" basedir="${target.dir}"/>
	</target>

		
	 <target name="use" description="Use the Task" depends="jar">
	 	<taskdef name="publishrequest" classname="se.simonsoft.cms.publish.abxpe.PublishRequest" classpath="${target.dir}"/>
	   	<publishrequest>
	   		<message msg="name1"/>
	   		<message msg="name2"/>
	   	</publishrequest>
	</target>
</project>